{
  "log": {
    "level": "warn"
  },
  "inbounds": [
    {
      "type": "vless",
      "tag": "vless-in",
      "listen": "{{ inventory__sing_box_config.listen }}",
      "listen_port": {{ inventory__sing_box_config.listen_port }},
      "tcp_fast_open": true,
      "tcp_multi_path": true,
      "udp_fragment": false,
      "udp_timeout": "1m",
      "sniff": true,
      "sniff_override_destination": true,
      "domain_strategy": "ipv4_only",
      "users": {{ inventory__sing_box_config.users | to_nice_json(indent=2) | indent(width=8, first=false) }},
      "tls": {
        "enabled": true,
        "server_name": "{{ inventory__sing_box_config.server_name }}",
          "reality": {
          "enabled": true,
          "handshake": {
            "server": "{{ inventory__sing_box_config.server_name }}",
            "server_port": {{ inventory__sing_box_config.server_port }}
          },
          "private_key": "{{ inventory__sing_box_config.private_key }}",
          "short_id": [
            "{{ inventory__sing_box_config.short_id }}"
          ]
        }
      },
      "multiplex": {
        "enabled": true
      }
    }
  ],
  "outbounds": [
    {
      "type": "direct",
      "tag": "direct-out"
    },
    {
      "type": "block",
      "tag": "block"
    }
  ]
}
